{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"outDir": "dist",
		"target": "es5",
		"module": "es6",
		"moduleResolution": "node",
		"lib": [
			"dom",
			"es2018"
		],
		"sourceMap": true,
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": [
		"./src/**/*.ts",
	],
 	"exclude": ["node_modules"]
}
